{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "gcc.exe build active file",
			"command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
                        /*
                        gcc ofdm-dtc8psk.c mtrand.c kfcomp2013.c -0 ofdm-dtc8psk-compile.out -O2 -lm -Wall -Wextra -march=native -pedantic-errors
                        */
			"args": [
				"-g",
				"${file}",
				"${fileDirname}\\mtrand.c",
				"${fileDirname}\\kfcomp2013.c",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-O2",
				"-Wall",
				"-Wextra",
				//"-mtune=native",
				//"-mfpmath=both",
				// if -march=native is working, __BIGGEST_ALIGNMENT__ == 16 is changed to 32
				"-march=native",
				"-pedantic-errors",
			],
			"options": {
				"cwd": "C:\\msys64\\mingw64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}
